{{# section 'head' }}	
	<title>WeMe|Login</title>

{{/ section}}


{{> user/navbar}}

{{#unless session.isLogin}}

<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-7">
				<form action="/auth/login" method="POST" role="form">
					<legend>登录</legend>

					<div class="form-group">
					<div class="field">
						<input id="username" type="text" class="form-control" name="username" data-bind="textInput: username" placeholder="用户名" maxlength="20" autocomplete="on">
						{{!-- <label data-bind="text: username"></label> --}}
					</div>
					<br>
					<div class="field">
						<input id="password" type="password" class="form-control" data-bind="textInput: password" placeholder="密码">
						{{!-- <label data-bind="text: password"></label> --}}
						<input type="hidden" class="form-control" name="password" data-bind="textInput: passhash" placeholder="passhash">
					</div>
				</div>
					<button type="submit" class="btn btn-primary btn-block" >登录</button>
					<hr>
					<a href="/auth/register">新来喂米？注册</a><br>
					<a href="#resetpasswd">忘记密码？</a>
				</form>
			
		</div>
	</div>
	
</div>
{{/unless}}

{{# section 'jquery' }}
	<script type="text/javascript" src="/bower_components/knockout/dist/knockout.js"></script>
	<script type="text/javascript" src="/js/auth/login.js"></script>
	<script type="text/javascript" src="/js/util/md5.js"></script>
	
{{/ section}}